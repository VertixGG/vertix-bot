{
	"compilerOptions": {
		"target": "ESNext",
		"module": "commonjs",
		"outDir": "./dist/",
		"strict": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"forceConsistentCasingInFileNames": true,
		"removeComments": true,
		"typeRoots": [
			"node_modules/@types"
		],
		"sourceMap": true,
		"inlineSourceMap": true,
		"baseUrl": "./",
		"paths": {
			"@internal/*": [
				"src/*"
			],
			"@dynamico/*": [
				"src/dynamico/*"
			]
		}
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"dist",
	],
	"ts-node": {
		"require": [
			"tsconfig-paths/register"
		]
	}
}
