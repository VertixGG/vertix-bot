generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("PRISMA_DATABASE_URL")
}

enum E_INTERNAL_CHANNEL_TYPES {
  DEFAULT_CHANNEL
  DYNAMIC_CHANNEL
  MASTER_CREATE_CHANNEL
}

model guild {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  // ---
  guildId        String   @unique
  name           String
  // ---
  isInGuild      Boolean
  masterChannels Int[]
  // ---
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model category {
  id               String   @id @default(auto()) @map("_id") @db.ObjectId
  // ---
  name             String
  categoryId       String
  guildId          String
  // ---
  createdAtDiscord Int
  // ---
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model channel {
  id               String                   @id @default(auto()) @map("_id") @db.ObjectId
  // ---
  channelId        String
  guildId          String
  userOwnerId      String
  categoryId       String?
  ownerChannelId   String?
  // ---
  internalType     E_INTERNAL_CHANNEL_TYPES @default(DEFAULT_CHANNEL)
  // ---
  data             data?                    @relation(fields: [dataId], references: [id], onDelete: Cascade)
  dataId           String?                  @unique @db.ObjectId
  // ---
  createdAtDiscord Int
  // ---
  createdAt        DateTime                 @default(now())
  updatedAt        DateTime                 @updatedAt
}

model data {
  id                            String   @id @default(auto()) @map("_id") @db.ObjectId
  // ---
  newDynamicChannelTemplateName String   @default("%{userDisplayName}%'s Channel")
  // ---
  channel                       channel?
  // ---
  createdAt                     DateTime @default(now())
  updatedAt                     DateTime @updatedAt
}
